{
  "name": "legal-expand",
  "version": "1.2.0",
  "description": "Expansi칩n inteligente de siglas legales espa침olas. 646 siglas verificadas de RAE, BOE y DPEJ. Optimizado para documentos largos con expansi칩n selectiva de primera ocurrencia.",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "workspaces": [
    "landing"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prebuild:csv": "tsx scripts/build-data.ts",
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build:esm": "tsc --project tsconfig.build.json --outDir dist/esm",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --format=cjs --target=node18 --outfile=dist/cjs/index.cjs",
    "validate:dictionary": "tsx scripts/validate-dictionary.ts",
    "test": "vitest run",
    "test:manual": "node test/test-manual.js",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:check": "tsx scripts/benchmark-thresholds.ts",
    "export-siglas": "tsx scripts/export-siglas.ts",
    "merge-rae-siglas": "tsx scripts/merge-rae-siglas.ts",
    "landing:dev": "npm run dev --workspace legal-expand-landing",
    "landing:build": "npm run build --workspace legal-expand-landing",
    "landing:preview": "npm run preview --workspace legal-expand-landing",
    "prepublishOnly": "npm run validate:dictionary && npm run build && npm run test:coverage && npm run bench:check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "csv-parse": "^5.5.3",
    "esbuild": "^0.27.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "legal",
    "siglas",
    "acronimos",
    "abreviaturas",
    "espa침ol",
    "derecho",
    "legislacion",
    "spanish",
    "law",
    "acronyms"
  ],
  "author": "686f6c61",
  "license": "MIT",
  "homepage": "https://legal-expand.onrender.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/686f6c61/legal-expand.git"
  },
  "bugs": {
    "url": "https://github.com/686f6c61/legal-expand/issues"
  }
}
